// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output   = "../docs/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

model Assignment {
  id            String        @id @unique @default(cuid())
  title         String
  description   String
  due_date      DateTime
  Courses       Course        @relation(fields: [course_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  course_id     String
  Submissions   Submission[]
}

model Course {
  id          String        @id @unique @default(cuid())
  course_code String
  course_name String
  Teacher     Teacher       @relation(fields: [teacher_id], references: [id])
  teacher_id  String
  Assignments Assignment[]
  Enrollments Enrollment[]
}

model Enrollment {
  id            String  @id @unique @default(cuid())
  Student       Student @relation(fields: [student_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  student_id    String
  Course        Course  @relation(fields: [course_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  course_id     String
}

model Student {
  id          String        @id @unique @default(cuid())
  first_name  String        @default("DefaultFirst")
  last_name   String        @default("DefaultLast")
  email       String        @unique
  Enrollments Enrollment[]
  Submissions Submission[]
  Users       User[]
}

model Submission {
  id              String      @id @unique @default(cuid())
  submission_date DateTime
  score           Int
  comment         String
  Student         Student     @relation(fields: [student_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  student_id      String
  Assignment      Assignment  @relation(fields: [assignment_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  assignment_id   String
}

model Teacher {
  id         String    @id @unique @default(cuid())
  first_name String    @default("DefaultFirst")
  last_name  String    @default("DefaultLast")
  email      String    @unique
  Courses    Course[]
  Users      User[]
}

model User {
  id         String    @id @unique @default(cuid())
  role       UserRole  @default(STUDENT)
  email      String
  password   String
  Student    Student?  @relation(fields: [student_id])
  student_id String?
  Teacher    Teacher?  @relation(fields: [teacher_id])
  teacher_id String?
}
